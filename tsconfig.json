{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "paths": {
        "*": [
            "node_modules/*",
            "app/javascript/types/*"
        ]
    },
  },
  "exclude": [
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
