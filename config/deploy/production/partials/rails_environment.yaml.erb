- name: DATABASE_URL
  valueFrom:
    secretKeyRef:
      name: postgres-secrets
      key: DATABASE_URL
- name: INFLUXDB_URL
  valueFrom:
    secretKeyRef:
      name: influx-secrets
      key: url
- name: MQTT_URL
  valueFrom:
    secretKeyRef:
      name: mqtt-credentials
      key: MQTT_URL
- name: RAILS_ENV
  value: production
- name: REDIS_URL
  value: redis://redis:6379/1
- name: SECRET_KEY_BASE
  valueFrom:
    secretKeyRef:
      name: application-secrets
      key: secret_key_base
- name: SENTRY_DSN
  valueFrom:
    secretKeyRef:
      name: application-secrets
      key: sentry_dsn
- name: GOOGLE_OAUTH_CLIENT_ID
  valueFrom:
    secretKeyRef:
      name: application-secrets
      key: google_oauth_client_id
- name: GOOGLE_OAUTH_CLIENT_SECRET
  valueFrom:
    secretKeyRef:
      name: application-secrets
      key: google_oauth_client_secret
- name: RAILS_SERVE_STATIC_FILES
  value: "true"
- name: RAILS_LOG_TO_STDOUT
  value: "true"
